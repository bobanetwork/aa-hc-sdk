{
  "name": "@bobanetwork/aa-hc-sdk-server",
  "version": "2.1.0",
  "description": "Hybrid Compute SDK for the backend",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "type": "commonjs",
  "files": [
    "dist/src/**"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:coverage": "npm test -- --coverage",
    "test:badges": "npm run test:coverage  && jest-coverage-badges"
  },
  "keywords": [
    "hybrid",
    "compute",
    "sdk"
  ],
  "author": "Boba Network",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bobanetwork/aa-hc-sdk.git"
  },
  "license": "ISC",
  "dependencies": {
    "@types/mocha": "^10.0.10",
    "body-parser": "^1.20.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "jest-coverage-badges": "^1.1.2",
    "json-rpc-2.0": "^1.7.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.1",
    "viem": "^2.33.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.7.0",
    "@types/supertest": "^6.0.3",
    "axios": "^1.7.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ]
  }
}
